# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
# PostgreSQL - Use DATABASE_URL for connection string (recommended for Supabase)
# DATABASE_URL=postgresql://user:password@host:port/database
# Example for Supabase: 
# DATABASE_URL=postgresql://postgres.xxx:[YOUR-PASSWORD]@aws-1-ap-south-1.pooler.supabase.com:6543/postgres
DATABASE_URL=

# Or use individual parameters (if DATABASE_URL is not set):
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=collaborative_workspace
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password

# MongoDB
MONGODB_URI=mongodb://localhost:27017/collaborative_workspace

# Redis - Use REDIS_URL for connection string (recommended for Upstash) or individual params
# REDIS_URL=rediss://default:password@host:port
# Example for Upstash:
# REDIS_URL=rediss://default:xxx@tight-dogfish-9778.upstash.io:6379
REDIS_URL=

# Or use individual parameters (if REDIS_URL is not set):
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# WebSocket
WS_PORT=3001

# Bull Queue (Job Processing)
BULL_REDIS_HOST=localhost
BULL_REDIS_PORT=6379

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_REAL_TIME_COLLABORATION=true
FEATURE_CODE_EXECUTION=true

# Observability
LOG_LEVEL=info
ENABLE_METRICS=true
